<%= render "shared/hero", title: "Games" %>

<p style="color: green"><%= notice %></p>

<section class="section">
  <div class="container" id="games">
    <% @games.each do |game| %>
      <div class="box">
        <%= render game %>
        <p>
          <%= link_to "Show this game", game %>
        </p>
      </div>
    <% end %>
  </div>

  <%= link_to "New game", new_game_path %>
</section>

