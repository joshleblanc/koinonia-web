<p style="color: green"><%= notice %></p>
<section class="section">
  <div class="container" id="games">
    <%= render "shared/hero", title: "Games", link: new_game_path %>

    <div class="box">
      <%= link_to "New game", new_game_path %>
      <div class="overflow-x-auto">
        <table class="table">
          <thead>
            <tr>
              <th>Name</th>
            </tr>
          </thead>
          <tbody>
            <% @games.each do |game| %>
              <tr>
                <td><%= game.name %></td>
                <td><%= link_to "Show this game", game %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>
