<%= render "shared/hero", title: @game.name %>

<p style="color: green"><%= notice %></p>

<section class="section">
  <div class="container">
    <%= render @game %>

    <div>
      <%= link_to "Edit this game", edit_game_path(@game) %> |
      <%= link_to "Back to games", games_path %>

      <%= button_to "Destroy this game", @game, method: :delete, class: "button is-danger" %>
    </div>

    <div class="p-2">
      <%= turbo_frame_tag dom_id(@game, :versions), src: game_game_versions_path(@game) do %>
        <p>Loading versions...</p>
      <% end %> 
    </div>
  </div>
</section>


