<p style="color: green"><%= notice %></p>
<section class="section">
  <div class="container">
    <%= render "shared/hero", title: @package.name %>

    <div class="box">
      <%= render @package %>
      <div>
        <%= link_to "Edit this package", edit_package_path(@package) %> |
        <%= link_to "Back to packages", packages_path %>
        <%= button_to "Destroy this package", @package, method: :delete %>
      </div>
    </div>
    <%= turbo_frame_tag dom_id(@package, :versions), src: package_package_versions_path(@package) do %>
      <p>Loading versions...</p>
    <% end %>
  </div>
</section>
