<section class="section">
  <div class="container">
    <%= turbo_frame_tag dom_id(@package_version.package, :versions) do %>
      <%= render "shared/hero", title: @package_version.package.name %>
      <p style="color: green"><%= notice %></p>
      <%= render @package_version %>
      <div>
        <%= link_to "Edit this package version", edit_package_version_path(@package_version) %> |
        <%= link_to "Back to package versions", package_package_versions_path(@package_version) %>
        <%= button_to "Destroy this package version", @package_version, method: :delete %>
      </div>
    <% end %>
  </div>
</section>