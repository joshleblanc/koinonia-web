<%= turbo_frame_tag dom_id(@conversation, :contents) do %>

  <%= render "shared/hero", title: "Contents" %>

  <p style="color: green"><%= notice %></p>

  <div id="conversation_contents">
    <%= render @conversation_contents %>
  </div>

  <%= turbo_frame_tag dom_id(@conversation, :new_content), src: new_conversation_conversation_content_path(@conversation), target: :_top, refresh: :morph %>
<% end %>
