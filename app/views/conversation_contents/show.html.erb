<%= render "shared/hero", title: @conversation_content.conversation.title %>
<p style="color: green"><%= notice %></p>
<section class="section">
  <div class="container">
    <%= turbo_frame_tag @conversation_content.conversation, :contents do %>
      <div class="box">
        <%= render @conversation_content %>
        <div>
          <%= link_to "Edit this conversation content", edit_conversation_content_path(@conversation_content) %> |
          <%= link_to "Back to conversation contents", conversation_conversation_contents_path(@conversation_content.conversation) %>
          <%= button_to "Destroy this conversation content", @conversation_content, method: :delete %>
        </div>
      </div>
    <% end %>
  </div>
</section>
