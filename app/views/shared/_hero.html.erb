<div class="border-b border-primary pb-5 sm:flex sm:items-center sm:justify-between my-10">
  <h3 class="font-semibold leading-6 text-primary"><%= title %></h3>
  <div class="mt-3 sm:ml-4 sm:mt-0">
    <% if params[:id] %>
      <%- model = params[:controller].singularize.classify.constantize.find(params[:id]) %>
    <% end %>

    <% if %w(edit show new).include?(params[:action]) %>
      <%= link_to "Back to #{params[:controller]}", url_for({ controller: params[:controller], action: :index}) %>
    <% end %>
    <% if params[:action] == "edit" %>
      <%= link_to "Show this #{params[:controller].singularize}", url_for({ controller: params[:controller], action: :show })%>
    <% end %>
    <% if params[:action] == "index" %>
      <%= link_to "New #{params[:controller].singularize.humanize.titleize}", url_for({ controller: params[:controller], action: :new })%>
    <% end %>
    <% if params[:action] == "show" %>
      <%= link_to "Edit this #{params[:controller].singularize.titleize}", url_for({ controller: params[:controller], action: :edit })%>
      <%= button_to "Destroy this game", url_for({ controller: params[:controller], action: :destroy, id: params[:id] }), method: :delete, class: "btn btn-error", form_class: "inline-block", data: { controller: "loading-button", loading_button_message_value: "Are you sure you want to delete this #{params[:controller].singularize}?"} %>
    <% end %>
  </div>
</div>